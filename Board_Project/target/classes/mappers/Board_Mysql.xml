	<!-- 게시물 등록 -->
	<insert id="addBoard">
		INSERT INTO TB_BOARD(
			BBS_SEQ
			, TITLE
			, CONT
			, REF
			, STEP
			, LVL
			, PWD
			, READ_CNT
			, REG_NO
			, REG_DT
			, UPD_NO
			, UPD_DT
			, STAT
		)VALUES (
			#{bbsSeq}
			, #{title}
			, #{cont}
			, #{ref}
			, #{step}
			, #{lvl}
			, #{pwd}
			, #{readCnt}
			, #{regNo}
			, NOW()
			, #{updNo}
			, NOW()
			, 1
		)
		<selectKey keyProperty="boardSeq" resultType="integer" order="AFTER">
			SELECT LAST_INSERT_ID()
		</selectKey>		
	</insert>
	
	<update id="updateRef">
		<choose>
			<when test="ref > 0">UPDATE TB_BOARD SET REF = #{ref} WHERE BOARD_SEQ = #{boardSeq}</when>
			<otherwise>UPDATE TB_BOARD SET REF = #{boardSeq} WHERE BOARD_SEQ = #{boardSeq}</otherwise>
		</choose>
	</update>
	
	<update id="updateLvl">
		UPDATE 
			TB_BOARD
		SET
			LVL = #{lvl} + 1
		WHERE 1=1
			AND BOARD_SEQ = #{boardSeq}
	</update>
	
